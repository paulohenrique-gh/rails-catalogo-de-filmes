<% if flash[:notice] %>
  <div>
    <h3><%= flash[:notice] %></h3>
  </div>
<% end %>

<div>
  <h2><%= @director.name %></h2>
</div>
<div>
  <strong>Nacionalidade: </strong><%= @director.nationality %>
</div>
<div>
  <strong>Data de nascimento: </strong><%= @director.birth_date.strftime('%d/%m/%Y') %>
</div>
<div>
  <strong>GÃªnero favorito: </strong><%= @director.genre.name %>
</div>
<div>
  <strong>Filmes cadastrados: </strong>
  <% if @movies.empty? %>
    <p>Nenhum filme deste diretor cadastrado</p>
  <% else %>
    <ul>
      <% @movies.each do |movie| %>
        <li><%= movie.title %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="edit">
  <%= link_to 'Editar diretor', edit_director_path(@director.id) %>
</div>

<div class="back">
  <%= link_to 'Voltar para Diretores', directors_path %>
</div>