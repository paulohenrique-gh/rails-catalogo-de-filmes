<%= form_with model: movie do |f| %>
  <div>
    <%= f.label 'Título' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label 'Data de lançamento' %>
    <%= f.date_field :release_date %>
  </div>
  <div>
    <%= f.label 'Sinopse' %>
    <%= f.text_area :synopsis %>
  </div>
  <div>
    <%= f.label 'País de origem' %>
    <%= f.text_field :origin %>
  </div>
  <div>
    <%= f.label 'Duração em minutos' %>
    <%= f.number_field :length %>
  </div>
  <div>
    <%= f.label 'Diretor' %>
    <%= f.collection_select :director_id, Director.all, :id, :name %>
  </div>
  <div>
    <%= f.label 'Gênero' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div>
    <%= f.label 'Poster' %>
    <%= f.file_field :poster %>
  </div>
  <div>
    <%= f.submit 'Salvar' %>
  </div>
<% end %>