<h2>Filmes cadastrados</h2>

<% if flash[:notice] %>
  <div>
    <h3><%= flash[:notice] %></h3>
  </div>
<% end %>

<h3>Lançados</h3>
<% if @released.empty? %>
  <p>Nenhum filme lançado cadastrado</p>
<% end %>
<% @released.each do |movie| %>
  <div>
      <% if movie.poster.attached? %>
        <div>
          <%= image_tag movie.poster, class: 'list_poster' %>
        </div>
      <% end %>
      <%= link_to "#{movie.title} - #{movie.release_year}",
        movie_path(movie.id), class: 'movie_link' %> |
      <%= link_to 'Detalhes', movie_path(movie.id) %> |
      <%= link_to 'Editar', edit_movie_path(movie.id) %> 
      <hr>
  </div>
<% end %>

<h3>Não lançados</h3>
<% if @not_released.empty? %>
  <p>Nenhum filme não lançado cadastrado</p>
<% end %>
<% @not_released.each do |movie| %>
  <div>
      <% if movie.poster.attached? %>
        <div>
          <%= image_tag movie.poster, class: 'list_poster' %>
        </div>
      <% end %>
      <%= link_to "#{movie.title} - #{movie.release_year}",
        movie_path(movie.id), class: 'movie_link' %> |
      <%= link_to 'Detalhes', movie_path(movie.id) %> |
      <%= link_to 'Editar', edit_movie_path(movie.id) %>
      <hr>
  </div>
<% end %>

<div class="new">
  <%= link_to 'Cadastrar novo filme', new_movie_path %>
</div>