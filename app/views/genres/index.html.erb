<h2>Gêneros cadastrados</h2>

<% if flash[:notice] %>
  <div>
    <h3><%= flash[:notice] %></h3>
  </div>
<% end %>

<% if @genres.empty? %>
  <p>Nenhum gênero cadastrado</p>
<% end %>

<% @genres.each do |genre| %>
  <div>
      <%= genre.name %> | 
      <%= link_to 'Detalhes', genre_path(genre.id) %> | 
      <%= link_to 'Editar', edit_genre_path(genre.id) %>
  </div>
<% end %>

<div class="new">
  <%= link_to 'Cadastrar novo gênero', new_genre_path %>
</div>
